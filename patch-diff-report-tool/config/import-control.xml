<?xml version="1.0"?>
<!DOCTYPE import-control PUBLIC
        "-//Puppy Crawl//DTD Import Control 1.1//EN"
        "http://www.puppycrawl.com/dtds/import_control_1_1.dtd">

<import-control pkg="com.github.checkstyle">
	<allow pkg="java.io" />
	<allow pkg="java.nio" />
	<allow pkg="java.util" />
	<allow pkg="java.text" />
	<allow pkg="com.github.checkstyle.data" />
	<allow pkg="com.github.checkstyle" local-only="true" />
	<allow class="javax.xml.stream.XMLStreamException" local-only="true" />
	<subpackage name="site">
		<allow pkg="org.apache.maven.jxr" />
	</subpackage>
	<subpackage name="parser">
		<allow pkg="javax.xml.stream" />
	</subpackage>
</import-control>